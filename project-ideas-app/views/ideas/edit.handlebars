<div class="card card-body">
  <h3>Edit Project Ideas</h3>
  <form class="mt-2" action="/ideas/{{idea._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="ideaTitle">Title</label>
      <input type="text" name="ideaTitle" class="form-control" value="{{idea.title}}"/>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea name="details" class="form-control">{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-danger">Update</button>
  </form>
</div>
