
{{#each errors}}
<div class="alert alert-danger">
{{text}}
</div>
{{else}}
{{/each}}
<div class="card card-body">
  <h3>Edit Project Ideas</h3>
  <form class="mt-2" action="/ideas" method="post">
    <div class="form-group">
      <label for="ideaTitle">Idea title</label>
      <input type="text" name="ideaTitle" value="{{idea.title}}" class="form-control"/>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea name="details" class="form-control">{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-danger">Update</button>
  </form>
</div>
